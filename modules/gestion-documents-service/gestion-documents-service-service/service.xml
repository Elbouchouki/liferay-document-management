<?xml version="1.0"?>
<!DOCTYPE service-builder PUBLIC "-//Liferay//DTD Service Builder 7.4.0//EN"
        "http://www.liferay.com/dtd/liferay-service-builder_7_4_0.dtd">

<service-builder dependency-injector="ds" package-path="com.liferay.gwenod.gestiondocuments.service">
    <namespace>DocumentManagement</namespace>
    <entity local-service="true" name="Document" table="GDDocument" remote-service="true" uuid="true">

        <!-- PK fields -->

        <column name="documentId" primary="true" type="long"/>

        <!-- Group instance -->

        <column name="groupId" type="long"/>

        <!-- Audit fields -->

        <column name="companyId" type="long"/>
        <column name="userId" type="long"/>
        <column name="userName" type="String"/>
        <column name="createDate" type="Date"/>
        <column name="modifiedDate" type="Date"/>
        <column name="modifiedBy" type="long"/>

        <!-- Other fields -->

        <column name="city" type="String"/>
        <column name="address" type="String"/>
        <column name="type" type="String"/> <!-- [ENUM] POI / POA -->
        <column name="description" type="String"/>

        <column name="title" type="String"/>
        <column name="filepath" type="String"/>
        <column name="filename" type="String"/>
        <column name="fileversion" type="long"/>
        <column name="tags" type="String"/>

        <!-- Order -->

        <order by="asc">
            <order-column name="groupId"/>
        </order>

        <!-- Finder methods -->


        <finder name="UserId" return-type="Collection">
            <finder-column name="userId"/>
        </finder>
        <finder name="Filename" return-type="Collection">
            <finder-column name="filename"/>
        </finder>
        <finder name="UserIdAndTitleAndTags" return-type="Collection">
            <finder-column name="userId"/>
            <finder-column name="title"/>
            <finder-column name="tags"/>
        </finder>
        <finder name="UserIdAndFile" return-type="Collection">
            <finder-column name="userId"/>
            <finder-column name="filename"/>
        </finder>
        <finder name="UserIdAndFileFull" return-type="Collection">
            <finder-column name="userId"/>
            <finder-column name="filename"/>
            <finder-column name="fileversion"/>
        </finder>

        <!-- References -->

        <reference entity="AssetEntry" package-path="com.liferay.portlet.asset"/>
        <reference entity="AssetTag" package-path="com.liferay.portlet.asset"/>
    </entity>

    <entity name="DocumentHistory" table="GDHistory" local-service="false" remote-service="false" uuid="true">

        <!-- PK fields -->

        <column name="historyId" primary="true" type="long"/>

        <!-- Audit fields -->

        <column name="versionDate" type="Date"/>
        <column name="versionModifier" type="long"/>

        <!-- Other fields -->

        <column name="documentId" type="long"/>
        <column name="title" type="String"/>
        <column name="filepath" type="String"/>
        <column name="filename" type="String"/>
        <column name="fileversion" type="long"/>
        <column name="tags" type="String"/>
        <column name="city" type="String"/>
        <column name="address" type="String"/>
        <column name="description" type="String"/>


        <!-- Order -->

        <order by="asc">
            <order-column name="historyId"/>
        </order>

        <!-- Finder methods -->

        <finder name="DocumentId" return-type="Collection">
            <finder-column name="documentId"/>
        </finder>

        <!-- References -->

        <reference entity="Document" package-path="com.liferay.gwenod.gestiondocuments.service"/>
    </entity>

</service-builder>